# Fix Qt5 icons - from https://wiki.archlinux.org/index.php/Qt#Configuration_of_Qt_apps_under_environments_other_than_KDE
export XDG_CURRENT_DESKTOP=KDE

# set wallpaper
feh --bg-scale /usr/share/wallpapers/Next/contents/images/2560x1600.png

# setup monitors
[ -x $HOME/bin/toggle-screens.sh ] && $HOME/bin/toggle-screens.sh on

# backlight
[ -x /usr/bin/autoadjust-backlight.py ] && /usr/bin/autoadjust-backlight.py

# numlock
numlockx on

# change caps lock to escape
xmodmap -e "remove Lock = Caps_Lock"
xmodmap -e "keysym Caps_Lock = Escape"
xmodmap -e "keysym XF86Tools = Insert"

# Connect to network, set keyboard
# konsole -e 'zsh -c "nmtui && echo 2 | sudo tee /sys/module/hid_apple/parameters/fnmode"'

# Autostart (TODO: assign to screens)
# kstart ktp-contactlist
# kstart HipChat4
# kstart chromium

